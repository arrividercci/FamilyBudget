@model FamilyBudget.WebServer.Mvc.Models.LoginViewModel

@{
    ViewData["Title"] = "Login"; // Adjusted title to Ukrainian
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Login</h1>

            <form method="post" asp-controller="Accounts" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Added class for consistent styling -->
                <div class="form-group"> <!-- Added form-group class for consistent styling -->
                    <label asp-for="Email" class="control-label"></label><br />
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label><br />
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe) <!-- Added label for RememberMe checkbox -->
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Login</button> <!-- Changed input type to button for consistent styling -->
                </div>
            </form>
            <div class="form-group">
                Don't have any account? <a asp-action="Register">Register</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom styles to center the form and make it as wide as its current size */
    .form-group{
        margin-top: 15px;
    }
    .container {
        margin-top: 50px; /* Adjust as needed */
    }
</style>