@model FamilyBudget.WebServer.Mvc.Models.PurchaseViewModel

<body>
    <h1>Create Purchase</h1>
    <div class="container">
        <form method="post" asp-action="CreatePurchase" asp-controller="Families" asp-route-id="@ViewData["familyId"]">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-1 col-form-label fs-4">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control w-25" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-1">
                <label asp-for="Price" class="col-sm-1 col-form-label fs-4">Price</label>
                <div class="col-sm-10">
                    <input asp-for="Price" class="form-control w-25" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-5 offset-sm-1">
                    <div class="form-check">
                        <input asp-for="IsReplenishment" type="checkbox" class="form-check-input">
                        <label asp-for="IsReplenishment" class="form-check-label">Is Replenishment</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-5 offset-sm-1 mt-1">
                    <button type="submit" class="btn btn-outline-success">Create</button>
                </div>
            </div>
        </form>
    </div>
</body>