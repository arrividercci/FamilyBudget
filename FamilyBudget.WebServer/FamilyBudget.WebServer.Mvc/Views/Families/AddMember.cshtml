@model FamilyBudget.WebServer.Mvc.Models.UserViewModel

<h1>Add Member</h1>
<div>
    <form method="post" asp-action="AddMember" asp-controller="Families" asp-route-id="@ViewData["familyId"]">
        <input type="hidden" name="familyId" value="@ViewData["familyId"]" />
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-1 col-form-label fs-4">Email</label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control w-25" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-5 offset-sm-1 mt-1">
                <button type="submit" class="btn btn-outline-success">Add member</button>
            </div>
        </div>
    </form>
</div>