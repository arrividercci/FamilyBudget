@model List<FamilyBudget.WebServer.Data.Models.FamilyForListDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Families</h1>

<p>
    <button type="button" onclick="location.href='@Url.Action("CreateFamily", "Families")'" class="btn btn-outline-success mt-2">Create new</button>
</p>
@if (Model.Any())
{
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item"><a class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" asp-action="Index" asp-route-id="@item.Id">@item.Name</a></li>
        }
    </ul>
}
else
{
    <p>No families found.</p>
}