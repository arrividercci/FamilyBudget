@model FamilyBudget.WebServer.Mvc.Models.FamilyViewModel

<body>
    <h1>Create Family</h1>
    <div class="container">
        <form method="post" asp-action="CreateFamily" asp-controller="Families">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-1 col-form-label fs-4">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control w-25" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-5 offset-sm-1 mt-1">
                    <button type="submit" class="btn btn-outline-success">Create</button>
                </div>
            </div>
        </form>
    </div>
</body>